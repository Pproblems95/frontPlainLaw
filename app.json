{
  "expo": {
    "name": "plainlaw-app",
    "scheme": "plain",
    "slug": "plainLaw",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logoRecortado.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/logoRecortado.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logoRecortado.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.pproblems.plainLaw"
    },
    "web": {
      "favicon": "./assets/logoRecortado.png"
    },
    "plugins": [
      "expo-router",
      "expo-build-properties",[
        "expo-camera",{
           "cameraPermission": "Permite acceder a tu cámara",
           "microphonePermission": "Permite acceder a tu micrófono"
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "09e2235d-457d-4db0-82c3-6bbbb43e2568"
      },
      "url": "https://velazduran.com:3000"
    }
  }
}
